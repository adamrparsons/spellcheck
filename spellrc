## Maxcorrection takes an int representing how different the spelling can be
## from the suggested correction
maxcorrection = 2

## Dictionary takes a file path to a dictionary file, with words seperated
## by line-breaks
dictionary = words

## Autocorrect takes a 'yes' or a 'no' for whether words should automatically
## be corrected, or if the user should be asked first
autocorrect = no
